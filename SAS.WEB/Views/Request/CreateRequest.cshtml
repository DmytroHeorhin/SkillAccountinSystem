@using SAS.WEB.Models;
@model RequestViewModel
<div class="container">
    <h2>Create request</h2>
    <div class="row">
        @using (Html.BeginForm("CreateRequest", "Request", FormMethod.Post))
        {
            <div class="col-md-6">
                @SkillList.SkillListFor(Model.Request)
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-default">
                    <a class="btn btn-default" href="/Request/Requests"><span class="fa fa-history"></span> Search history</a>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-default">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="panel-heading"><h4>Request name</h4></div>
                    <div class="panel-body">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>