@using SAS.WEB.Models
@model SkillModel

@{
    ViewBag.Title = "Create skill";
}

<div class="container">
    <h3>Create skill</h3>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("CreateSkill", "Tools", FormMethod.Post))
            {
                <div class="panel panel-default">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="panel-heading">Skill name</div>
                    <div class="panel-body">
                        <div class="editor-field">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="panel-body">
                        <select name="CategoryId">
                            <option value="0">Choose category of skill</option>
                            @foreach (CategoryModel category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                    </div>
                <input type="submit" value="Create skill" class="btn btn-default">
            }
        </div>
    </div>
</div>

